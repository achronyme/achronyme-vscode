{
  "name": "achronyme-soc",
  "displayName": "Achronyme SOC Language",
  "description": "Full language support for Achronyme SOC with LSP features: code completion, diagnostics, formatting, navigation, and more",
  "version": "0.2.0",
  "publisher": "achronyme",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/achronyme/achronyme-vscode"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "achronyme",
    "scientific computing",
    "calculator",
    "lsp",
    "language server"
  ],
  "activationEvents": [
    "onLanguage:soc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "soc",
        "aliases": [
          "Achronyme SOC",
          "soc",
          "achronyme"
        ],
        "extensions": [
          ".soc",
          ".ach"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "soc",
        "scopeName": "source.soc",
        "path": "./syntaxes/soc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "soc",
        "path": "./snippets/soc.json"
      }
    ],
    "iconThemes": [
      {
        "id": "achronyme-icons",
        "label": "Achronyme File Icons",
        "path": "./icons/achronyme-icon-theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Achronyme",
      "properties": {
        "achronyme.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Achronyme Language Server"
        },
        "achronyme.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to achronyme-lsp executable. Leave empty to use bundled or PATH."
        },
        "achronyme.lsp.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the language server"
        }
      }
    },
    "commands": [
      {
        "command": "achronyme.restartServer",
        "title": "Restart Language Server",
        "category": "Achronyme"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  }
}
